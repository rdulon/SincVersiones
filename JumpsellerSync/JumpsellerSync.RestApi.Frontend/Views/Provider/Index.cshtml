@using JumpsellerSync.BusinessLogic.Core.Dtos.Main
@model IEnumerable<ProviderDto>

@{
   ViewData["Title"] = "Proveedores";
}

<h1>Proveedores</h1>

<p>
   <a asp-action="Create">Añadir Proveedor</a>
</p>
<table class="table">
   <thead>
      <tr>
         <th>Prioridad</th>
         <th>Nombre</th>
         <th>Url</th>
         <th>Activo</th>
         <th></th>
      </tr>
   </thead>
   <tbody>
      @foreach (var item in Model)
      {
         <tr>
            <td>@Html.DisplayFor(modelItem => item.Priority)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Url)</td>
            <td>@Html.DisplayFor(modelItem => item.Active)</td>
            <td>
               @Html.ActionLink("Editar", "Edit", new { id = item.Id })&nbsp;
               <button type="button" class="btn btn-sm btn-outline-primary sync-provider"
                       data-provider-id="@item.Id"
                       data-provider-name="@item.Name">
                  <i class="fa fa-refresh"></i>
                  Sincronizar
               </button>
            </td>
         </tr>
      }
   </tbody>
</table>




@section Styles {
   <environment include="Development">
      <link rel="stylesheet" href="~/css/provider.css" />
   </environment>
   <environment exclude="Development">
      <link rel="stylesheet" href="~/bundles/css/provider.min.css" />
   </environment>
}

@section Scripts {
   <environment include="Development">
      <script src="~/js/provider.js"></script>
   </environment>
   <environment exclude="Development">
      <script src="~/bundles/js/provider.min.js"></script>
   </environment>
}