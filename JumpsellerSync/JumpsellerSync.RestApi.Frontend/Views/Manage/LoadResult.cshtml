@using JumpsellerSync.BusinessLogic.Core.Dtos.Main
@model LoadProductsResultDto

@if (Model != null)
{
   <form class="col-sm-12">
      <div class="row form-group">
         <label class="col-sm-2 col-form-label" for="load-amount">Productos cargados:</label>
         <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="load-amount" value="@Model.Amount">
         </div>
      </div>

      <div class="row form-group">
         <label class="col-sm-2 col-form-label" for="load-time">Duración:</label>
         <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext"
                   id="load-time" value="@Model.LoadTime.ToString("%m' min. '%s' seg.'")">
         </div>
      </div>

      <div class="row form-group">
         <label class="col-sm-2 col-form-label" for="load-message">Mensaje:</label>
         <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="load-message" value="@Model.Message">
         </div>
      </div>
   </form>
}
else
{
   <h1>Error</h1>
}
