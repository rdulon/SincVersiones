@using JumpsellerSync.BusinessLogic.Core.Dtos.Main
@model IEnumerable<PrefetchedBrandDto>
@{
   var title = "Productos Locales";
   ViewData["Title"] = title;
}

@{ await Html.RenderPartialAsync("AddLocalProducts", Model); }

<div class="row no-margin d-flex justify-content-between align-items-baseline">
   <h1>@title</h1>
   <div>
      <nav>
         <span>Elementos por página: </span>
         <div id="items-per-page" class="d-inline-block">
            <ul class="pagination pagination-sm">
               <li class="page-item active" data-ipp="10">
                  <span class="page-link">10</span>
               </li>
               <li class="page-item" data-ipp="20">
                  <span class="page-link">20</span>
               </li>
               <li class="page-item" data-ipp="30">
                  <span class="page-link">30</span>
               </li>
               <li class="page-item" data-ipp="40">
                  <span class="page-link">40</span>
               </li>
            </ul>
         </div>
      </nav>
   </div>
</div>

<div class="row no-margin d-flex justify-content-start align-items-center">
   <button class="btn btn-primary" type="button"
           data-toggle="modal" data-target="#addLocalProductModal">
      <i class="fa fa-plus" aria-label="hidden"></i>
      Agregar Producto
   </button>
   &nbsp;
   <button class="btn btn-outline-success" id="update-local-products">
      <i class="fa fa-save" aria-label="hidden"></i>
      Grabar Cambios
   </button>
   &nbsp;
   <div class="spinner-border text-primary" role="status" id="local-products-loading">
      <span class="sr-only">Cargando...</span>
   </div>
</div>
<br />
<div class="row row no-margin" id="local-products"></div>
<div class="row justify-content-center" id="local-products-pagination"></div>

@section Styles {
   <environment include="Development">
      <link rel="stylesheet" href="~/css/bootstrap-tagsinput.css" />
      <link rel="stylesheet" href="~/css/local-products.css" />
   </environment>
   <environment exclude="Development">
      <link rel="stylesheet" href="~/bundles/css/local-products.min.css" />
   </environment>
}

@section Scripts {
   <environment include="Development">
      <script src="~/js/typeahead.bundle.js"></script>
      <script src="~/js/bootstrap-tagsinput.js"></script>
      <script src="~/js/jquery.bootpag.js"></script>
      <script src="~/js/local-products.js"></script>
   </environment>
   <environment exclude="Development">
      <script src="~/js/typeahead.bundle.min.js"></script>
      <script src="~/bundles/js/local-products.min.js"></script>
   </environment>
}
