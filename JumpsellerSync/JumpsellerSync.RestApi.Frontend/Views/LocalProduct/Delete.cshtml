@model JumpsellerSync.BusinessLogic.Core.Dtos.Main.LocalProductDetailsDto

@{
   var title = "Eliminar Producto Local";
   ViewData["Title"] = title;
}

<h1>@title</h1>

<h3>¿Está seguro que desea eliminar este producto local?</h3>
<div>
   <hr />
   <dl class="row">
      <dt class="col-sm-2">SKU</dt>
      <dd class="col-sm-10">@Html.DisplayFor(model => model.Sku)</dd>
      <dt class="col-sm-2">Nombre</dt>
      <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
      <dt class="col-sm-2">Precio</dt>
      <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>
      <dt class="col-sm-2">Stock</dt>
      <dd class="col-sm-10">@Html.DisplayFor(model => model.Stock)</dd>
   </dl>

   <form asp-action="ConfirmDelete">
      @Html.HiddenFor(m => m.Id)
      <input type="submit" value="Eliminar" class="btn btn-danger" /> |
      <a asp-action="Index">Back to List</a>
   </form>
</div>
